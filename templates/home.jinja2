{% extends 'base.jinja2' %}

{% block content %}
        <div class="search-container-padding">
            <div class="homepage-search">
            <h1 class="h1-padding">Znajdź lek w swoim mieście</h1>
                <div class="row">
                    <form class="form-inline my-2 my-lg-0"  method="POST">
                        {% for field in form %}
                            <div class="col", form-group">
                                {{ field.label() }}
                                {{ field(class="form-control") }}
                            </div>
                        {% endfor %}
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-search">Szukaj</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
{% endblock %}